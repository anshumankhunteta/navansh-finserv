{
    "extends": [
        "stylelint-config-standard"
    ],
    "rules": {
        "import-notation": null,
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "layer",
                    "config",
                    "theme",
                    "custom-variant",
                    "import"
                ]
            }
        ]
    }
}